<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/anime"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/game_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Game"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <ImageView
        android:id="@+id/boy_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/boy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/game_line"
        app:layout_constraintEnd_toEndOf="center"
         />
    <ImageView
        android:id="@+id/girl_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/girl"
        app:layout_constraintStart_toEndOf="@id/boy_image"
        app:layout_constraintTop_toBottomOf="@id/game_line"
        />
    <ImageView
        android:id="@+id/cat_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/cat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/boy_image"
        />
    <ImageView
        android:id="@+id/bird_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/bird"
        app:layout_constraintStart_toEndOf="@id/cat_image"
        app:layout_constraintTop_toBottomOf="@id/girl_image"
        />
    <EditText
        android:id="@+id/world_ed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@android:color/holo_purple"
        android:hint="Слово"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@+id/cat_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <Button
        android:id="@+id/answer_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Попробывать"
        android:textSize="30dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/world_ed" />





</androidx.constraintlayout.widget.ConstraintLayout>